div#sidebar-collapse.col-sm-3.col-lg-2.sidebar
            .profile-sidebar
                .profile-userpic
                    img(alt="userimage", src="http://placehold.it/50/30a5ff/fff", class="img-responsive")
                .profile-usertitle
                    .profile-usertitle-name=username
                    .profile-usertitle-status
                        span.indicator.label-success 
                        | online
                        .clear
                .divider

            ul.nav.menu
                //- li(class=(PAGE != "cdg" ? "" : "active"))
